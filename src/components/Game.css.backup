/* ========================================
   KADEN & ADELYNN SPACE ADVENTURES - GAME CSS
   Modern, Responsive, Animated Menu System
   ======================================== */

.game-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #000000;
  font-family: 'Arial', sans-serif;
  touch-action: manipulation;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: transparent;
  overscroll-behavior: none;
}

.game-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000000;
  cursor: crosshair;
}

/* ========================================
   MAIN MENU CONTAINER
   ======================================== */

.main-menu-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  overflow: hidden;
}

/* ========================================
   ANIMATED BACKGROUND
   ======================================== */

.menu-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #000033, #000066, #000099, #0000cc);
  background-size: 400% 400%;
  animation: gradientShift 8s ease infinite;
}

.stars {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(2px 2px at 20px 30px, #ffffff, transparent),
    radial-gradient(2px 2px at 40px 70px, rgba(255,255,255,0.8), transparent),
    radial-gradient(1px 1px at 90px 40px, #ffffff, transparent),
    radial-gradient(1px 1px at 130px 80px, rgba(255,255,255,0.6), transparent),
    radial-gradient(2px 2px at 160px 30px, #ffffff, transparent);
  background-repeat: repeat;
  background-size: 200px 100px;
  animation: twinkle 4s ease-in-out infinite alternate;
  opacity: 0.8;
}

.nebula {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="1" fill="white" opacity="0.5"><animate attributeName="opacity" values="0.5;1;0.5" dur="2s" repeatCount="indefinite"/></circle><circle cx="80" cy="30" r="1" fill="white" opacity="0.3"><animate attributeName="opacity" values="0.3;0.8;0.3" dur="3s" repeatCount="indefinite"/></circle><circle cx="50" cy="70" r="1" fill="white" opacity="0.7"><animate attributeName="opacity" values="0.7;1;0.7" dur="1.5s" repeatCount="indefinite"/></circle></svg>');
  animation: float 6s ease-in-out infinite;
}

/* ========================================
   MENU CONTENT
   ======================================== */

.menu-content {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 2rem;
  max-width: 1200px;
  width: 100%;
}

/* ========================================
   TITLE SECTION
   ======================================== */

.title-container {
  margin-bottom: 3rem;
  animation: fadeInUp 1s ease-out;
}

.game-title {
  color: #ffffff;
  font-size: clamp(2.5rem, 8vw, 5rem);
  font-weight: bold;
  text-align: center;
  margin-bottom: 1rem;
  text-shadow: 
    0 0 10px #00aaff,
    0 0 20px #00aaff,
    0 0 30px #00aaff,
    2px 2px 4px rgba(0, 0, 0, 0.8);
  letter-spacing: 2px;
  position: relative;
  overflow: hidden;
}

.title-text {
  display: inline-block;
  animation: titleScroll 6s ease-in-out infinite;
}

.game-subtitle {
  color: #00aaff;
  font-size: clamp(1.2rem, 4vw, 2rem);
  text-align: center;
  margin-bottom: 0;
  text-shadow: 0 0 10px #00aaff;
  animation: fadeInUp 1s ease-out 0.3s both;
}

/* ========================================
   CHARACTER SECTION
   ======================================== */

.character-section {
  margin-bottom: 3rem;
  animation: fadeInUp 1s ease-out 0.6s both;
}

.selected-character-card {
  display: flex;
  align-items: center;
  gap: 2rem;
  background: rgba(0, 170, 255, 0.1);
  border: 2px solid #00aaff;
  border-radius: 20px;
  padding: 2rem;
  backdrop-filter: blur(10px);
  box-shadow: 0 0 30px rgba(0, 170, 255, 0.3);
}

.character-sprite-container {
  position: relative;
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background: linear-gradient(45deg, #00aaff, #0088cc);
  padding: 10px;
  box-shadow: 0 0 20px rgba(0, 170, 255, 0.5);
}

.character-sprite {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background: #000033;
  display: block;
}

.character-info {
  text-align: left;
}

.character-name {
  color: #ffffff;
  font-size: 1.8rem;
  font-weight: bold;
  margin: 0 0 0.5rem 0;
  text-shadow: 0 0 10px #00aaff;
}

.character-ship {
  color: #00aaff;
  font-size: 1.2rem;
  margin: 0;
  text-shadow: 0 0 5px #00aaff;
}

/* ========================================
   MENU BUTTONS
   ======================================== */

.menu-buttons-container {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  margin-bottom: 3rem;
  animation: fadeInUp 1s ease-out 0.9s both;
}

.menu-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  padding: 1.2rem 2.5rem;
  border: none;
  border-radius: 15px;
  font-size: 1.3rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  min-width: 250px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.menu-button.primary {
  background: linear-gradient(45deg, #00aaff, #0088cc);
  color: #ffffff;
  box-shadow: 0 5px 15px rgba(0, 170, 255, 0.4);
}

.menu-button.primary:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(0, 170, 255, 0.6);
  background: linear-gradient(45deg, #00ccff, #00aaff);
}

.menu-button.secondary {
  background: rgba(0, 170, 255, 0.2);
  color: #00aaff;
  border: 2px solid #00aaff;
  backdrop-filter: blur(10px);
}

.menu-button.secondary:hover {
  transform: translateY(-3px);
  background: rgba(0, 170, 255, 0.3);
  box-shadow: 0 8px 25px rgba(0, 170, 255, 0.4);
}

.button-icon {
  font-size: 1.5rem;
}

.button-text {
  font-weight: bold;
}

/* ========================================
   GAME INFO SECTION
   ======================================== */

.game-info-section {
  margin-bottom: 2rem;
  animation: fadeInUp 1s ease-out 1.2s both;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1rem;
  max-width: 800px;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: rgba(0, 170, 255, 0.1);
  border-radius: 10px;
  border: 1px solid rgba(0, 170, 255, 0.3);
  backdrop-filter: blur(5px);
}

.info-icon {
  font-size: 1.5rem;
  flex-shrink: 0;
}

.info-text {
  color: #ffffff;
  font-size: 1rem;
  text-shadow: 0 0 5px #00aaff;
}

/* ========================================
   COMPANY BRANDING
   ======================================== */

.company-branding {
  animation: fadeInUp 1s ease-out 1.5s both;
}

.company-branding p {
  color: #00aaff;
  font-size: 0.9rem;
  margin: 0;
  text-shadow: 0 0 5px #00aaff;
  opacity: 0.8;
}

/* ========================================
   ANIMATIONS
   ======================================== */

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

@keyframes twinkle {
  0% { opacity: 0.8; }
  100% { opacity: 1; }
}

@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0px); }
}

@keyframes titleScroll {
  0% { 
    transform: translateX(-100%);
    opacity: 0;
  }
  20% { 
    opacity: 1;
  }
  80% { 
    opacity: 1;
  }
  100% { 
    transform: translateX(100%);
    opacity: 0;
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes titleGlow {
  0% { 
    text-shadow: 
      0 0 10px #00aaff,
      0 0 20px #00aaff,
      0 0 30px #00aaff,
      2px 2px 4px rgba(0, 0, 0, 0.8);
  }
  100% { 
    text-shadow: 
      0 0 20px #00aaff,
      0 0 30px #00aaff,
      0 0 40px #00aaff,
      2px 2px 4px rgba(0, 0, 0, 0.8);
  }
}

/* ========================================
   RESPONSIVE DESIGN
   ======================================== */

/* Large screens */
@media (min-width: 1200px) {
  .menu-content {
    padding: 3rem;
  }
  
  .selected-character-card {
    padding: 3rem;
  }
  
  .character-sprite-container {
    width: 150px;
    height: 150px;
  }
  
  .character-sprite {
    width: 130px;
    height: 130px;
  }
}

/* Tablets */
@media (max-width: 1024px) {
  .selected-character-card {
    flex-direction: column;
    text-align: center;
    gap: 1.5rem;
  }
  
  .info-grid {
    grid-template-columns: 1fr;
  }
}

/* Mobile landscape */
@media (max-width: 896px) and (orientation: landscape) {
  .menu-content {
    padding: 1rem;
  }
  
  .title-container {
    margin-bottom: 1rem;
  }
  
  .character-section {
    margin-bottom: 1rem;
  }
  
  .menu-buttons-container {
    margin-bottom: 1rem;
  }
  
  .selected-character-card {
    padding: 1rem;
  }
}

/* Mobile portrait */
@media (max-width: 768px) {
  .menu-content {
    padding: 1rem;
  }
  
  .selected-character-card {
    flex-direction: column;
    text-align: center;
    padding: 1.5rem;
  }
  
  .character-sprite-container {
    width: 100px;
    height: 100px;
  }
  
  .character-sprite {
    width: 80px;
    height: 80px;
  }
  
  .menu-button {
    min-width: 200px;
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }
}

/* Small phones */
@media (max-width: 480px) {
  .menu-content {
    padding: 0.5rem;
  }
  
  .selected-character-card {
    padding: 1rem;
  }
  
  .character-sprite-container {
    width: 80px;
    height: 80px;
  }
  
  .character-sprite {
    width: 60px;
    height: 60px;
  }
  
  .menu-button {
    min-width: 180px;
    padding: 0.8rem 1.5rem;
    font-size: 1rem;
  }
  
  .info-item {
    padding: 0.8rem;
  }
  
  .info-text {
    font-size: 0.9rem;
  }
}

/* ========================================
   GAME OVER SCREEN
   ======================================== */

.game-over-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #000033, #000066, #000099, #0000cc);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  color: #ffffff;
  text-align: center;
  padding: 2rem;
}

.game-over-title {
  font-size: 3rem;
  color: #ff4444;
  text-shadow: 0 0 20px #ff4444;
  margin-bottom: 2rem;
  animation: fadeInUp 1s ease-out;
}

.game-over-stats {
  background: rgba(0, 170, 255, 0.1);
  border: 2px solid #00aaff;
  border-radius: 15px;
  padding: 2rem;
  margin-bottom: 2rem;
  backdrop-filter: blur(10px);
  box-shadow: 0 0 30px rgba(0, 170, 255, 0.3);
  animation: fadeInUp 1s ease-out 0.3s both;
}

.game-over-stats p {
  margin: 0.5rem 0;
  font-size: 1.2rem;
  text-shadow: 0 0 5px #00aaff;
}

.game-over-buttons {
  display: flex;
  gap: 1rem;
  animation: fadeInUp 1s ease-out 0.6s both;
}

/* ========================================
   TOUCH CONTROLS
   ======================================== */

.touch-controls {
  position: absolute;
  bottom: 20px;
  right: 20px;
  z-index: 100;
}

.touch-shoot-button {
  background: linear-gradient(45deg, #ff4444, #cc3333);
  color: #ffffff;
  border: none;
  border-radius: 50px;
  padding: 1rem 2rem;
  font-size: 1.2rem;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 5px 15px rgba(255, 68, 68, 0.4);
  transition: all 0.3s ease;
  touch-action: manipulation;
}

.touch-shoot-button:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 25px rgba(255, 68, 68, 0.6);
}

.touch-shoot-button:active {
  transform: scale(0.95);
}

/* ========================================
   ACCESSIBILITY
   ======================================== */

@media (prefers-reduced-motion: reduce) {
  .menu-background {
    animation: none;
  }
  
  .stars {
    animation: none;
  }
  
  .nebula {
    animation: none;
  }
  
  .title-text {
    animation: none;
  }
  
  .game-title {
    animation: none;
  }
  
  .menu-button {
    transition: none;
  }
  
  .menu-button:hover {
    transform: none;
  }
}

/* ========================================
   PWA SPECIFIC STYLES
   ======================================== */

@media (display-mode: standalone) {
  .main-menu-container {
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
    padding-left: env(safe-area-inset-left);
    padding-right: env(safe-area-inset-right);
  }
}